    "bot",
    "chatbot",
    "aiml",
    "chatscript",
    "buddyscript",
    "rivescript",
    "siml",
    "bot framework",
    "superscript"
  ],
  "author": "Arnaud Leymet <arnaud.leymet@gmail.com>",
  "license": "MIT",
  "homepage": "https://codename.co/botml/",
  "repository": {
    "type": "git",
    "url": "https://github.com/botml/botml-js.git"
  },
  "bugs": {
    "url": "https://github.com/botml/botml-js/issues"
  },
  "directories": {
    "lib": "lib",
    "example": "examples"
