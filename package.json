    "xregexp": "^3.1.1",
    "yargs": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "decache": "^4.4.0",
    "mocha": "^2.4.5",
    "standard": "*",
    "supervisor": "^0.12.0"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "tonicExample": "var BotML = require('botml')\nvar bot = new BotML('https://raw.githubusercontent.com/BotML/botml-js/master/examples/hello.bot')\nbot.on('start', function () { console.log('Bot is ready!') })\nbot.start()"
}
